# Example .env (DO NOT STORE SECRETS IN REPO)
# Copy this to `.env` locally and fill values for development/testing only.

PORT=5000
NODE_ENV=development

# Database Configuration
DB_HOST=
DB_PORT=3306
DB_NAME=
DB_USER=
DB_PASSWORD=
# Enable TLS if your provider requires it
DB_SSL=false
# DB_SSL_CA can contain the PEM text or a base64-encoded PEM
DB_SSL_CA=

# Connection retry/backoff (optional)
DB_CONNECT_RETRIES=6
DB_CONNECT_DELAY_MS=1000

# JWT Configuration
JWT_SECRET=
JWT_EXPIRES_IN=24h

# CORS
CORS_ORIGIN=http://localhost:3000
